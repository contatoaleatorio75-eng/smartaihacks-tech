---
const links = [
	{ href: '/', label: 'Home' },
	{ href: '/library', label: 'Library' },
	{ href: '/about', label: 'About' },
	{ href: '/contact', label: 'Contact' },
];
---

<header class="bg-darker border-b border-gray-800 sticky top-0 z-50">
	<nav class="container mx-auto px-4 py-4 flex items-center justify-between">
		<a href="/" class="flex items-center gap-2">
			<img src="/images/logo.png" alt="SmartAIHacks Logo" class="h-10 w-auto" />
			<span class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
				SmartAIHacks
			</span>
		</a>
		<ul class="flex gap-6">
			{links.map((link) => (
				<li>
					<a href={link.href} class="text-gray-300 hover:text-accent transition-colors font-medium">
						{link.label}
					</a>
				</li>
			))}
		</ul>
	</nav>
</header>
