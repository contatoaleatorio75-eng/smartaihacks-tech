---
import Search from './Search.astro';

const links = [
	{ href: '/', label: 'Home' },
	{ href: '/library', label: 'Library' },
	{ href: '/about', label: 'About' },
	{ href: '/contact', label: 'Contact' },
];
---

<header class="bg-darker border-b border-gray-800 sticky top-0 z-50">
	<nav class="container mx-auto px-4 py-4 flex flex-col md:flex-row items-center justify-between gap-4">
		<a href="/" class="flex items-center gap-2">
			<img src="/images/logo.png" alt="SmartAIHacks Logo" class="h-10 w-auto" />
			<span class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
				SmartAIHacks
			</span>
		</a>
		
		<div class="flex items-center gap-6">
			<a href="https://www.youtube.com/@smartaihackstech?sub_confirmation=1" target="_blank" class="hidden md:flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-xs font-bold uppercase tracking-wider rounded-full transition-colors">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
					<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
				</svg>
				Subscribe
			</a>
			<Search />
			<ul class="hidden md:flex gap-6">
				{links.map((link) => (
					<li>
						<a href={link.href} class="text-gray-300 hover:text-accent transition-colors font-medium text-sm">
							{link.label}
						</a>
					</li>
				))}
			</ul>
		</div>
	</nav>
</header>
